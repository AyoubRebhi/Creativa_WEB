{% extends 'base.html.twig' %}

{% block title %}
	Projet
{% endblock %}

{% block body %}

	<div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
		<div class="container about px-lg-0">
			<div class="row g-0 mx-lg-0">
				<div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
					<div class="position-relative h-100">
						<img class="position-absolute img-fluid w-100 h-100" src="{{ asset('uploads/images/projet/' ~ projet.media) }}" style="object-fit: cover;" alt="Projet Image">
					</div>
				</div>
				<div class="col-lg-6 about-text py-5 wow fadeIn d-flex flex-column justify-content-between" data-wow-delay="0.5s">
					<div>
						<div class="p-lg-5 pe-lg-0">
							<div class="section-title text-start">
								<h1 class="display-5 mb-4">{{ projet.titre }}</h1>
							</div>
							<p class="mb-4 pb-2" style="margin-left:10px;">{{ projet.description }}</p>
							<div class="row g-4 mb-4 pb-2" style="margin-top: 20px;">
								<div class="col-sm-6 wow fadeIn" data-wow-delay="0.1s">
									<div class="d-flex align-items-center">
										<div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
											<i class="bi bi-cash-stack fa-2x text-primary"></i>
										</div>
										<div class="ms-3">
											<h2 class="text-primary mb-1" data-toggle="counter-up">{{ projet.prix }}
												Dt</h2>
											<p class="fw-medium mb-0">Prix</p>
										</div>
									</div>
								</div>
								<div class="col-sm-6 wow fadeIn" data-wow-delay="0.3s">
									<div class="d-flex align-items-center">
										<div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
											<i class="bi bi-heart fa-2x text-primary"></i>
										</div>
										<div class="ms-3">
											<h2 class="text-primary mb-1" data-toggle="counter-up">{{ getJaimeCountForProject(projet.idProjet) }}</h2>
											<p class="fw-medium mb-0">Jaimes</p>
										</div>
									</div>
								</div>
								<div class="col-sm-6 wow fadeIn" data-wow-delay="0.1s">
									<div class="d-flex align-items-center">
										<div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
											<i class="bi bi-tag-fill fa-2x text-primary"></i>
										</div>
										<div class="ms-3">
											<h2 class="text-primary mb-1" data-toggle="counter-up">{{ projet.idCategorie.titre }}</h2>
											<p class="fw-medium mb-0">Categorie</p>
										</div>
									</div>
								</div>
								<div class="col-sm-6 wow fadeIn" data-wow-delay="0.1s">
									<div class="d-flex align-items-center">
										<div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
											<i class="bi bi-person-circle fa-2x text-primary"></i>
										</div>
										<div class="ms-3">
											<h2 class="text-primary mb-1" data-toggle="counter-up">{{projet.user.lastName}}
												{{projet.user.firstName}}</h2>
											<p class="fw-medium mb-0">Artist Name</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="text-center">
						<a href="" class="btn btn-primary py-3 px-5">
							<i class="bi bi-cart-plus-fill me-2"></i>Commander
						</a>
						<form action="{{ path('app_jaime_add', {'idProjet': projet.idProjet}) }}" method="post">
							<button type="submit" class="btn btn-primary py-3 px-5">
								<i class="bi bi-heart me-2"></i>Jaime
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
