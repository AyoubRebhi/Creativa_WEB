<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Formulaire d'inscription</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="{{ asset('fonts/material-design-iconic-font/css/material-design-iconic-font.min.css') }}">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="{{ asset('css/styleh.css') }}">

        <style>
        /* Appliquer une marge autour du formulaire */
        .form-wrapper {
            margin:-400px; /* Vous pouvez ajuster la taille de la marge selon vos besoins */
        }
    </style>

</head>

<body>

<div class="wrapper" style="background-image: url('{{ asset('img/output-onlinepngtools.png') }}');">
    <div class="inner">
        <div class="image-holder">
            <img src="{{ asset('img/1.jpg') }}" height="750px">
        </div>
        <form {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}>
            <h3>Formulaire d'inscription</h3>

            {{ form_row(form.lastName, {'attr': {'placeholder': 'Prénom', 'class': 'form-control'}, 'label': 'Prénom'}) }}

            {{ form_row(form.firstName, {'attr': {'placeholder': 'Nom', 'class': 'form-control'}, 'label': 'Nom'}) }}

            {{ form_row(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur', 'class': 'form-control'}, 'label': 'Nom d\'utilisateur'}) }}

            {{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'}, 'label': 'Mot de passe'}) }}
            {{ form_errors(form.password) }}

            {{ form_row(form.passwordConfirmation, {'attr': {'placeholder': 'Confirmer le mot de passe', 'class': 'form-control'}, 'label': 'Confirmer le mot de passe'}) }}
            {{ form_errors(form.passwordConfirmation) }}

            {{ form_row(form.email, {'attr': {'placeholder': 'Adresse Email', 'class': 'form-control'}, 'label': 'Adresse Email'}) }}
            {{ form_errors(form.email) }}

            {{ form_row(form.numtel, {'attr': {'placeholder': 'Numéro de téléphone', 'class': 'form-control'}, 'label': 'Numéro de téléphone'}) }}
            {{ form_errors(form.numtel) }}

            {{ form_row(form.role, {'attr': {'class': 'form-control'}, 'label': 'Rôle'}) }}
            {{ form_errors(form.role) }}

            {{ form_row(form.submit, {'attr': {'class': 'button'}, 'label': 'Soumettre'}) }}

            {{ form_end(form) }}
            <!-- Fin du formulaire Symfony -->
        </form>
    </div>
</div>

</body>
</html>
