{% extends 'baseBack.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inscription.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ inscription.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ inscription.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ inscription.email }}</td>
            </tr>
            <tr>
                <th>DateNow</th>
                <td>{{ inscription.dateNow ? inscription.dateNow|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
              <tr>
                <th>Formation</th>
                <td>{{  inscription.formation }}</td>
            </tr>
        </tbody>
    </table>

<a href="{{ path('app_inscription_index') }}" class="btn btn-primary">Retourner</a>

<a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}" class="btn btn-secondary">Modifier</a>

{{ include('inscription/_delete_form.html.twig') }}

{% endblock %}
