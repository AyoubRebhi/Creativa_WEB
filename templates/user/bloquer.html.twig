{# templates/saisir_duree/index.html.twig #}

{% extends 'backOfficeAdmin.html.twig' %}

{% block title %}Saisir Durée{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Saisir Durée</h1>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}, {'attr': {'class': 'my-4'}}) }}
                    <div class="form-group">
                        {{ form_label(form.duree, 'Durée en minutes') }}
                        {{ form_widget(form.duree, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la durée en minutes'}}) }}
                        {{ form_errors(form.duree) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
