{% extends 'backoffice.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center">
                    <i class="bi bi-person-fill" style="color: #8B4513;"></i> Utilisateur
                </h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Prénom</th>
                            <td>{{ user.lastName }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom</th>
                            <td>{{ user.firstName }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                       
                        <tr>
                            <th scope="row">Role</th>
                            <td>{{ user.role|lower }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Address</th>
                            <td>{{ user.address }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Numtel</th>
                            <td>{{ user.numtel }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    {# <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a> #}
                    <a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Modifier</a>
                </div>

                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
