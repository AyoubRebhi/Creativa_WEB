{% extends 'backOfficeAdmin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table table-striped custom-table-center">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Username</th>
                <th>Role</th>
                <th>Phone Number</th>
                <th>Blocked</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.role | lower}}</td>
                <td>{{ user.numtel }}</td>
                <td>{{ user.blocked ? 'Oui' : 'No' }}</td>
                <td>
                    {% if user.role != 'ADMIN' %}
                        {% if not user.blocked %}
                            <a href="{{ path('saisir_duree', {'id': user.iduser}) }}" class="btn btn-danger">Bloquer</a>
                        {% else %}
                            <a href="{{ path('debloquer_utilisateur', {'id': user.iduser}) }}" class="btn btn-success">DÃ©bloquer</a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="btn btn-success">Create New</a>
{% endblock %}
