{% extends 'backOffice.html.twig' %}

{% block title %}Edit Categorie
{% endblock %}

{% block body %}
	<h1>Edit Categorie</h1>

	<div class="container">
		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_label(form.titre) }}
			{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.titre) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.image, 'Choisir une image', {'attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.image) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.description) }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
			{{ form_errors(form.description) }}
		</div>
		<button type="submit" class="btn btn-primary">Update</button>
		{{ form_end(form) }}
	</div>

	<a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Back to list</a>

	{{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
