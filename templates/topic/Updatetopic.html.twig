{% extends 'backOffice.html.twig' %}

{% block title %}Update Topic
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1>Update Topic</h1>
		{{ form_start(formulairetopic) }}
		<div class="form-group">
			{{ form_row(formulairetopic.Nom, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(formulairetopic.Subject, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(formulairetopic.Image, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Update</button>
		</div>
		{{ form_end(formulairetopic) }}
	</div>
{% endblock %}
